{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Lucky Draw",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Lucky Draw",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.luckydraw.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/512x512.png",
        "icons/icon.ico"
      ]
    }
  }
}
